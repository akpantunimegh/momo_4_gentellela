<body class="nav-md">
<div class="container body">
  <div class="main_container">


    <!-- page content -->
    <div class="right_col" role="main">
      <div class="">
        <div class="page-title">
          <div class="title_left">
            <h3>User Listing</h3>
          </div>

          <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
              </div>
            </div>
          </div>
        </div>

        <div class="clearfix"></div>

        <div class="row scroll-view">

          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
              <div class="x_title">
                <h2>Responsive look<small><%= link_to 'New Account', new_user_account_path(:user) %></small></h2>
                <ul class="nav navbar-right panel_toolbox">
                  <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                  </li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Settings 1</a>
                      </li>
                      <li><a href="#">Settings 2</a>
                      </li>
                    </ul>
                  </li>
                  <li><a class="close-link"><i class="fa fa-close"></i></a>
                  </li>
                </ul>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                  Responsive Admin extension for Admins only.
                </p>

                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">

                  <thead>
                  <tr>
                    <th>Reference</th>
                    <th>Name</th>
                    <th>Balance</th>
                    <th>Blocked</th>
                    <th>Date blocked</th>
                    <th>Expired</th>
                    <th>Date of expiry</th>
                    <th>Bank</th>
                    <th colspan="3"></th>
                  </tr>
                  </thead>


                  <div class="col-md-4 hidden-small">

                    <tbody>
                    <% @accounts.each do |account| %>
                        <tr>

                          <td><%= link_to account.account_reference %></td>
                          <td><%= account.name %></td>
                          <td><%= account.balance %></td>
                          <td><%= account.blocked %></td>
                          <td><%= account.date_blocked %></td>
                          <td><%= account.expired %></td>
                          <td><%= account.date_of_expiry %></td>
                          <td><%= account.bank %></td>
                          <td></td>
                          <td><%#= link_to 'Edit', edit_account_path(account) %></td>
                          <td><%#= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% end %>

                    </tbody>
                  </div>
                </table>


              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /page content -->


</div>

