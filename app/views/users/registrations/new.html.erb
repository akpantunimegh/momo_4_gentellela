<body class="login">
<div>

  <div class="login_wrapper">

    <div class="animate form login_form">
      <!-- page content -->

      <div class="right_col" role="main">
        <h2>Sign up</h2>
        <section class = "login_content">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class='col-sm-6'>
                <div class="form-group">
                  <%= f.text_field :username, autofocus: true, autocomplete: "username",class: "form-control", placeholder:"Username" %>
                </div>
              </div>


              <div class='col-sm-6'>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: false, autocomplete: "email",class: "form-control", placeholder:"Email" %>
                </div>
              </div>

              <div class='col-sm-6'>
                <div class="form-group">
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password" , class: "form-control", placeholder:"Password" %>
                </div>
              </div>

              <div class='col-sm-6'>
                <div class="form-group">
                  <em> repeat the password</em>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Password" %>
                </div>
              </div>



              <div>
                <%= f.submit "Sign up", class:"btn btn-default submit" %>
              </div>
              <div class="clearfix"></div>

              <div class="separator">
                <%= render "users/shared/links" %>

                <div class="clearfix"></div>
                <br />
              </div>

          <% end %>

        </section>
      </div>
    </div>
  </div>
</div>
</body>




